{
  "manifest_version": 3,
  "name": "GitHub Checks Sorter",
  "version": "1.1",
  "description": "Sorts failing status checks to the top on GitHub pull request pages",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["script.js"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
